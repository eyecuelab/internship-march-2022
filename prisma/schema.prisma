datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    String @id @default(cuid())
  email String @unique
  userName String?

  avatarUrl String?

  password Password?

  attendees Attendee[]
  trips Trip[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Attendee {
  trip Trip @relation(fields: [tripId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  tripId String
  
  owner User @relation(fields: [ownerId], references: [id], onDelete: Cascade, onUpdate: Cascade) // owner ID is for this owner field, id is referencing user id
  ownerId String
  
  decider Decider @relation(fields: [deciderId], references: [id])
  deciderId String

  expenses Expense[]

  packingList PackingList @relation(fields: [packingListId], references: [id])
  packingListId String

  isAccepted DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([tripId, userId])
}

model Password {
  hash String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String @unique
}
